<%= link_to  "Home", museums_path%>



<h1> Write Review</h1>

<%if @errors%>
    <%@errors.each do |error|%>
    <>
    <%=error%> 
    </>
    <%end%>
<%end%>
<br>
<%= form_for @review do |f| %>
<div>
<%= f.label :review %>
<%= f.text_area :review %>
</div>
<br>
<%= f.label :rate %>
<%=f.range_field :rate, :in => 0..5, :step => 1 %>

<%= f.fields_for :museum do |m| %>

<%= m.label :name %>
<%= m.text_field :name %>
<br>
<div>
<%= m.label :borough %>
<%= m.text_field :borough %>
</div>
<%end%>
</div>
<%= f.submit "Review"%>
<%end%>