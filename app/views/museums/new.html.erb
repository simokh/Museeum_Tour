<%= link_to  "Home", museums_path%>



<h1>Create Your Museum Visit</h1>

<%if @errors%>
    <%@errors.each do |error|%>
    <div>
    <%=error%> 
    </div>
    <%end%>
<%end%>

<%= form_for(@museum) do |f| %>
<div>
<%= f.label :name %>
<%= f.text_field :name %>
</div>
<br>
<div>
<%= f.label :borough %>
<%= f.text_field :borough %>
</div>
<br>

<%= form_for(@visit) do |v| %>
<div>
<%= v.label :visit_date%>
<%= v.date_field (:visit_date) %>
</div>

<%= f.submit "Visit"%>

<%end%>

