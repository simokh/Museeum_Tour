<%= link_to  "Home", museums_path%>



<h1>Create Your Museum Visit</h1>

<%if @errors%>
    <%@errors.each do |error|%>
    <div>
    <%=error%> 
    </div>
    <%end%>
<%end%>

<%= form_for(@museum) do |f| %>
<div>
<%= f.label :name %>
<%= f.text_field :name %>
</div>
<br>
<div>
<%= f.label :borough %>
<%= f.text_field :borough %>
</div>
<br>

<%= f.fields_for :visit_date do |v| %>
<div>
<%= v.label :visit_date%>
<%= v.date_field :visit_date %>
</div>
<%end%>

<%= f.fields_for :review do |v| %>
<div>
<%= v.label :review%>
<%= v.text_area :review %>
</div>
<%end%>

<%= f.fields_for :rate do |v| %>
<div>
<%= v.label :rate%>
<%= v.text_field :rate %>
</div>

<%end%>

<%= f.submit "Visit"%>

<%end%>

